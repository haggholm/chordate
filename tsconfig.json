{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "es2016",
      "scripthost",
      "es2017",
      "es2018",
      "esnext",
      "dom"
    ],
    "target": "es2018",
    "moduleResolution": "node",
    "rootDir": "src",
    "module": "commonjs",
    "sourceMap": true
  }
}
