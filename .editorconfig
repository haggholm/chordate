root = true

[*.{js,jsx,mjs,ts,tsx,css,scss,sass,less}]
charset = utf8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab

[*.{json,md}]
charset = utf8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
